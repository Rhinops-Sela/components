cp-kafka:
  enabled: true
  brokers: 3
  tolerations:
  - key: "kafka"
    operator: "Equal"
    value: "true"
    effect: "NoSchedule"
  nodeSelector:
    role: kafka-workers
  persistence:
    enabled: true
    dataDirSize: 5Gi
    dataLogDirSize: 5Gi
cp-zookeeper:
  enabled: true
  tolerations:
  - key: "kafka"
    operator: "Equal"
    value: "true"
    effect: "NoSchedule"
  nodeSelector:
    role: kafka-workers
  servers: 3
  persistence:
    enabled: true
    dataDirSize: 5Gi
    dataLogDirSize: 5Gi
